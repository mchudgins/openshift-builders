{
    "apiVersion": "v1",
    "kind": "Template",
    "labels": {
        "application": "TODO",
        "createdBy": "golang-app-template"
    },
    "metadata": {
        "annotations": {
            "description": "Builds a golang application from a git repository with a Dockerfile and an existing, base image stream",
            "iconClass": "icon-golang",
            "tags": "builder, golang"
        },
        "name": "golang-app-template"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION}:latest"
                    }
                },
                "resources": {},
                "source": {
                    "contextDir": "${CONTEXT_DIR}",
                    "git": {
                        "ref": "${GIT_REF}",
                        "uri": "${GIT_URI}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "customStrategy": {
                        "exposeDockerSocket": true,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "golang:latest",
                            "namespace": ""
                        }
                    },
                    "type": "custom"
                },
                "triggers": [
                    {
                        "github": {
                            "secret": "${GITHUB_TRIGGER_SECRET}"
                        },
                        "type": "GitHub"
                    },
                    {
                        "generic": {
                            "secret": "${GENERIC_TRIGGER_SECRET}"
                        },
                        "type": "Generic"
                    },
                    {
                        "imageChange": {},
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "dockerImageRepository": "",
                "tags": [
                    {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APPLICATION}:latest"
                        },
                        "name": "latest"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "${APPLICATION}"
                },
                "strategy": {
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "deploymentConfig": "${APPLICATION}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "${APPLICATION}",
                                "imagePullPolicy": "IfNotPresent",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 8080
                                    },
                                    "timeoutSeconds": 1
                                },
                                "name": "${APPLICATION}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": [],
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION}:latest"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "${APPLICATION}-http",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APPLICATION}"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            }
        }
    ],
    "parameters": [
        {
            "description": "The name for the new application.",
            "displayName": "Application Name",
            "name": "APPLICATION",
            "reqired": true,
            "value": ""
        },
        {
            "description": "The name:tag of the existing, base imagestream upon which this new imagestream builds.",
            "displayName": "Base Imagestream Name",
            "name": "BASE_IMAGESTREAM",
            "required": true,
            "value": "centos:7"
        },
        {
            "description": "Git source URI for application",
            "name": "GIT_URI",
            "value": "https://github.com/mchudgins/jeeves.git"
        },
        {
            "description": "Git branch/tag reference",
            "name": "GIT_REF",
            "value": "master"
        },
        {
            "description": "Git Directory",
            "name": "CONTEXT_DIR",
            "value": "/"
        },
        {
            "description": "Github trigger secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GITHUB_TRIGGER_SECRET"
        },
        {
            "description": "Generic build trigger secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GENERIC_TRIGGER_SECRET"
        }
    ]
}
